<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">



    <!-- Main background layer with border -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#f8f8f8" /> <!-- Background color -->
            <stroke android:width="1dp" android:color="#000000" /> <!-- Border with 1dp width -->
        </shape>
    </item>

</layer-list>
