<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Secretary.Secretary_Home.HomeSecretary">
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_above="@id/menu"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/homeLayout"
        android:background="@color/white"
        android:visibility="visible"
        android:layout_above="@id/menu"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@drawable/bgdashboard"/>

        <!--    this will be the loan fragment-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relative"
            android:elevation="1dp"
            android:paddingVertical="20dp"
            android:paddingHorizontal="10dp"
            android:visibility="visible"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/white"
                android:id="@+id/card"
                app:cardCornerRadius="100dp" >
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_height="50dp"
                    app:cardElevation="100dp"
                    app:cardCornerRadius="100dp" >
                    <ImageView
                        android:id="@+id/avatarImageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:elevation="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_toEndOf="@id/card"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Welcome back,"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/readexpro"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Secretary"
                    android:id="@+id/name"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/readexsemibold"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/pastDue"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_toStartOf="@id/loanHistory"
                android:scaleType="centerCrop"
                android:src="@drawable/overdue"
                android:background="?attr/selectableItemBackground" />
            <ImageButton
                android:id="@+id/loanHistory"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_toStartOf="@id/chatSupport"
                android:scaleType="centerCrop"
                android:src="@drawable/histry"
                android:background="?attr/selectableItemBackground" />
            <ImageButton
                android:id="@+id/chatSupport"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_alignParentEnd="true"
                android:scaleType="centerCrop"
                android:src="@drawable/menu_chat"
                android:background="?attr/selectableItemBackground" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/relative"
            android:id="@+id/balanceLayout"
            android:elevation="20dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:background="@drawable/loanbalancebg"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:text="Collection Today"
                android:textColor="@color/black"
                android:padding="15dp"
                android:background="@drawable/bgloanbalance"
                android:textSize="20dp"
                android:fontFamily="@font/readexmedium"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/previousBalance"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textSize="30dp"
                android:fontFamily="@font/readexpro"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/balanceLayout"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/sec_account_detail_bg"
            android:layout_marginBottom="-20dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/robot"
                android:textColor="#000000"
                android:padding="10dp"
                android:textSize="15dp"
                android:text="Collection Today:"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="15dp"
                android:scrollbars="vertical" />
        </LinearLayout>

        <!--   end of the loan fragment-->
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:id="@+id/menu"
        android:layout_alignParentBottom="true"
        android:layout_height="90dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="-3dp"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:gravity="bottom"
            android:background="@drawable/bottom_nav_bg"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="40dp"
                    android:id="@+id/dataIndicator"
                    android:visibility="invisible"
                    android:layout_height="2dp"
                    android:background="@color/green2"/>
                <ImageButton
                    android:id="@+id/data"
                    android:layout_width="50dp"
                    android:padding="8dp"
                    android:layout_height="50dp"
                    android:src="@drawable/menu_data_unselected"
                    android:scaleType="fitXY"
                    android:background="?attr/selectableItemBackground"
                    android:tooltipText="Data"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data"
                    android:fontFamily="@font/readexpro"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="40dp"
                    android:id="@+id/capitalIndicator"
                    android:visibility="invisible"
                    android:layout_height="2dp"
                    android:background="@color/green2"/>
                <ImageButton
                    android:id="@+id/capital"
                    android:layout_width="50dp"
                    android:padding="8dp"
                    android:layout_height="50dp"
                    android:src="@drawable/menu_capital_unselected"
                    android:scaleType="fitXY"
                    android:background="?attr/selectableItemBackground"
                    android:tooltipText="Capital"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capital"
                    android:fontFamily="@font/readexpro"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="40dp"
                    android:id="@+id/homeIndicator"
                    android:visibility="visible"
                    android:layout_height="2dp"
                    android:background="@color/green2"/>
                <ImageButton
                    android:id="@+id/home"
                    android:layout_width="50dp"
                    android:padding="8dp"
                    android:layout_height="50dp"
                    android:src="@drawable/menu_home_selected"
                    android:scaleType="fitXY"
                    android:background="?attr/selectableItemBackground"
                    android:tooltipText="Order"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:fontFamily="@font/readexpro"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="40dp"
                    android:id="@+id/approvalIndicator"
                    android:visibility="invisible"
                    android:layout_height="2dp"
                    android:background="@color/green2"/>
                <ImageButton
                    android:id="@+id/approval"
                    android:layout_width="50dp"
                    android:padding="8dp"
                    android:layout_height="50dp"
                    android:src="@drawable/menu_approval_unselected"
                    android:scaleType="fitXY"
                    android:background="?attr/selectableItemBackground"
                    android:tooltipText="Approval"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approval"
                    android:fontFamily="@font/readexpro"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="40dp"
                    android:id="@+id/profileIndicator"
                    android:visibility="invisible"
                    android:layout_height="2dp"
                    android:background="@color/green2"/>
                <ImageButton
                    android:id="@+id/profile"
                    android:layout_width="50dp"
                    android:padding="8dp"
                    android:src="@drawable/menu_profile_unselected"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:background="?attr/selectableItemBackground"
                    android:tooltipText="Order"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:fontFamily="@font/readexpro"
                    android:textSize="14sp"
                    android:textColor="@color/black" />


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>