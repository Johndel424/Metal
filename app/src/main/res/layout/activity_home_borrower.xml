<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Borrower.Home_Feature.HomeBorrower">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_above="@id/menu"
        android:layout_height="match_parent" />
    <!--    this will be the upload reminder fragment-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/pendingRelativeLayout"
        android:background="@drawable/border"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:elevation="100dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/gifVerifying"
                android:layout_height="300dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="25dp"
                android:textColor="@color/green2"
                android:textStyle="bold"
                android:fontFamily="@font/readexpro"
                android:text="Hang tight.."
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:textColor="#000000"
                android:fontFamily="@font/readexpro"
                android:text="We're still processing your account "
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/readexpro"
                android:text="verification"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/updateProfileRelativeLayout"
        android:background="@drawable/border"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:elevation="100dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="23dp"
                android:textStyle="bold"
                android:fontFamily="@font/readexpro"
                android:textColor="#15CE00"
                android:text="You're all set!"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="23dp"
                android:textStyle="bold"
                android:fontFamily="@font/readexpro"
                android:textColor="#15CE00"
                android:text="Registration Completed"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="23dp"
                android:textStyle="bold"
                android:fontFamily="@font/readexpro"
                android:textColor="#15CE00"
                android:text="Successfully."
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/gifWelcome"
                android:layout_height="300dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/readexpro"
                android:textColor="#000000"
                android:text="Follow these easy steps to approve your"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:textSize="15dp"
                android:fontFamily="@font/readexpro"
                android:text="account and get your loan right away"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:layout_width="50dp"
                android:id="@+id/completeProfile"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/next"
                android:background="?attr/selectableItemBackground"
                android:layout_height="50dp"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rejectedRelativeLayout"
        android:background="@drawable/border"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:elevation="100dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="23dp"
                android:textStyle="bold"
                android:fontFamily="@font/readexpro"
                android:textColor="#15CE00"
                android:text="You're account is rejected"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="23dp"
                android:textStyle="bold"
                android:fontFamily="@font/readexpro"
                android:textColor="#15CE00"
                android:text="Try to upload again for new"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="23dp"
                android:textStyle="bold"
                android:fontFamily="@font/readexpro"
                android:textColor="#15CE00"
                android:text="account approval."
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/gifRejected"
                android:layout_height="300dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/readexpro"
                android:text="Make sure all documents are correct"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/readexpro"
                android:text=" and not blurred"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:layout_width="50dp"
                android:id="@+id/applyButtonAgain"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/next"
                android:background="?attr/selectableItemBackground"
                android:layout_height="50dp"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/uploadDocumentsRelativeLayout"
        android:background="@drawable/border"
        android:elevation="100dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="23dp"
                android:textStyle="bold"
                android:fontFamily="@font/readexpro"
                android:textColor="#15CE00"
                android:text="You're all set!"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="23dp"
                android:textStyle="bold"
                android:fontFamily="@font/readexpro"
                android:textColor="#15CE00"
                android:text="Registration Completed"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="23dp"
                android:textStyle="bold"
                android:fontFamily="@font/readexpro"
                android:textColor="#15CE00"
                android:text="Successfully."
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/gifWelcome1"
                android:layout_height="300dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/readexpro"
                android:text="Follow these easy steps to approve your"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/readexpro"
                android:text="account and get your loan right away"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:layout_width="50dp"
                android:id="@+id/completeDocuments"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/next"
                android:background="?attr/selectableItemBackground"
                android:layout_height="50dp"/>
        </LinearLayout>
    </RelativeLayout>
    <!--   end of the upload reminder fragment-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/homeLayout"
        android:background="@color/white"
        android:visibility="visible"
        android:layout_above="@id/menu"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@drawable/bgdashboard"/>

        <!--    this will be the loan fragment-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relative"
            android:elevation="1dp"
            android:paddingVertical="20dp"
            android:paddingHorizontal="10dp"
            android:visibility="visible"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/white"
                android:id="@+id/card"
                app:cardCornerRadius="100dp" >
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_height="50dp"
                    app:cardElevation="100dp"
                    app:cardCornerRadius="100dp" >
                    <ImageView
                        android:id="@+id/avatarImageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:elevation="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_toEndOf="@id/card"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Welcome back,"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/readexpro"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Borrower"
                    android:id="@+id/name"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/readexsemibold"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/chatButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_alignParentEnd="true"
                android:scaleType="centerCrop"
                android:src="@drawable/menu_chat"
                android:background="?attr/selectableItemBackground" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/relative"
            android:id="@+id/balanceLayout"
            android:elevation="20dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:background="@drawable/loanbalancebg"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:text="Current Loan Balance"
                android:textColor="@color/black"
                android:padding="15dp"
                android:background="@drawable/bgloanbalance"
                android:textSize="20dp"
                android:fontFamily="@font/readexmedium"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/previousBalance"
                android:text="NO Balance"
                android:textColor="@color/black"
                android:padding="15dp"
                android:textSize="40dp"
                android:fontFamily="@font/readexbold"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/balanceLayout"
            android:padding="20dp"
            android:id="@+id/quick"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/loanHistoryLayout"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="60dp"
                    android:padding="10dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/loanHistory"

                    android:background="@drawable/quickaccessbg"
                    android:src="@drawable/menu_history_loan"
                    android:layout_height="60dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/loanHistory"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/readexmedium"
                    android:textColor="#000000"
                    android:text="Loan History"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="60dp"
                    android:padding="10dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/creditScore"
                    android:background="@drawable/quickaccessbg"
                    android:src="@drawable/menu_credit_score"
                    android:layout_height="60dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/creditScore"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/readexmedium"
                    android:textColor="#000000"
                    android:text="Credit Score"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/quick"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/sec_account_detail_bg"
            android:layout_marginBottom="-20dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/robot"
                android:textColor="#000000"
                android:padding="10dp"
                android:textSize="15dp"
                android:text="RECENT TRANSACTION:"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:paddingHorizontal="15dp"
                android:layout_height="match_parent"
                android:id="@+id/recyclerView"
                android:scrollbars="vertical"/>
        </LinearLayout>

        <!--   end of the loan fragment-->
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:id="@+id/menu"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginBottom="-3dp"
            android:elevation="10dp"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:background="@drawable/bottom_nav_bg">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="40dp"
                    android:id="@+id/historynIndicator"
                    android:visibility="invisible"
                    android:layout_height="2dp"
                    android:background="@color/green2"/>
                <ImageButton
                    android:id="@+id/history"
                    android:layout_width="50dp"
                    android:padding="8dp"
                    android:layout_height="50dp"
                    android:src="@drawable/menu_history_unselected"
                    android:scaleType="fitXY"
                    android:background="?attr/selectableItemBackground"
                    android:tooltipText="Notification"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notification"
                    android:fontFamily="@font/readexpro"
                    android:textSize="14sp"
                    android:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="40dp"
                    android:id="@+id/homeIndicator"
                    android:visibility="visible"
                    android:layout_height="2dp"
                    android:background="@color/green2"/>
                <ImageButton
                    android:id="@+id/home"
                    android:layout_width="50dp"
                    android:padding="8dp"
                    android:layout_height="50dp"
                    android:src="@drawable/menu_home_selected"
                    android:scaleType="fitXY"
                    android:background="?attr/selectableItemBackground"
                    android:tooltipText="Home"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:fontFamily="@font/readexpro"
                    android:textSize="14sp"
                    android:textColor="@color/black" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="40dp"
                    android:id="@+id/loanIndicator"
                    android:visibility="invisible"
                    android:layout_height="2dp"
                    android:background="@color/green2"/>
                <ImageButton
                    android:id="@+id/loan"
                    android:layout_width="50dp"
                    android:padding="8dp"
                    android:layout_height="50dp"
                    android:src="@drawable/menu_loan_unselected"
                    android:scaleType="fitXY"
                    android:background="?attr/selectableItemBackground"
                    android:tooltipText="Loan"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loan"
                    android:fontFamily="@font/readexpro"
                    android:textSize="14sp"
                    android:textColor="@color/black" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="40dp"
                    android:id="@+id/profileIndicator"
                    android:visibility="invisible"
                    android:layout_height="2dp"
                    android:background="@color/green2"/>
                <ImageButton
                    android:id="@+id/profile"
                    android:layout_width="50dp"
                    android:padding="8dp"
                    android:src="@drawable/menu_profile_unselected"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:background="?attr/selectableItemBackground"
                    android:tooltipText="Profile"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:fontFamily="@font/readexpro"
                    android:textSize="14sp"
                    android:textColor="@color/black" />


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>



</RelativeLayout>