<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Borrower.LoanHistory_Feature.LoanHistoryDetail">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/border2"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/bghis"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_height="70dp">
            <TextView
                android:layout_width="250dp"
                android:layout_centerVertical="true"
                android:text="PAYMENT HISTORY"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:fontFamily="@font/robot"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="The following is a list of payments you have acquired."
                android:paddingHorizontal="10dp"
                android:textSize="12dp"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:fontFamily="@font/readexpro"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:background="@drawable/chatlistbg"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:paddingHorizontal="15dp"
                android:layout_height="match_parent"
                android:id="@+id/recyclerView"
                android:scrollbars="vertical"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>