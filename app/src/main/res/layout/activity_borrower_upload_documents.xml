<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/gradient2"
    android:layout_height="match_parent"
    tools:context=".Borrower.UploadDocuments_Feature.Borrower_UploadDocuments">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:layout_marginTop="45dp"
                android:padding="10dp"
                android:background="@drawable/button_background"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/robot"
                android:text="UPLOAD REQUIREMENTS" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/readexpro"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="13dp"
                android:text="Kindly submit the required documents for loan application."
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:adjustViewBounds="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/imagevivew2status"
                    android:layout_height="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="(1) Valid Id      "
                    android:textColor="#000000"
                    android:fontFamily="@font/readexpro"
                    android:gravity="center"
                    android:layout_height="30dp"/>
                <!-- Section for Valid ID -->
                <TextView
                    android:id="@+id/textViewValidId"
                    android:layout_width="wrap_content"
                    android:text="ID Number"
                    android:textColor="#000000"
                    android:fontFamily="@font/readexpro"
                    android:gravity="center"
                    android:layout_height="30dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="5dp">

                <!-- 60% width section for the image -->
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="6">
                    <ImageView
                        android:id="@+id/imageViewValidId"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/bg_with_radius_shadow"
                        android:padding="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"/>
                </RelativeLayout>


                <!-- 30% width section for the buttons -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginHorizontal="5dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/selectButtonValidId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/readexmedium"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:text="Choose from Gallery"
                        android:background="@drawable/button_background"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginVertical="8dp">

                        <!-- Left line -->
                        <View
                            android:layout_width="50dp"
                            android:layout_height="1dp"
                            android:background="#000000"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="8dp" />

                        <!-- Text "Or" -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Or"
                            android:fontFamily="@font/readexpro"
                            android:gravity="center"
                            android:textColor="#000000"/>

                        <!-- Right line -->
                        <View
                            android:layout_width="50dp"
                            android:layout_height="1dp"
                            android:background="#000000"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/captureButtonValidId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/readexmedium"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:text="Take a Picture"
                        android:background="@drawable/button_background"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:adjustViewBounds="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="(1) Valid Id      "
                    android:textColor="#000000"
                    android:fontFamily="@font/readexpro"
                    android:gravity="center"
                    android:layout_height="30dp"/>
                <!-- Section for Valid ID -->
                <TextView
                    android:id="@+id/textViewPermitId"
                    android:layout_width="wrap_content"
                    android:text="Id Number"
                    android:textColor="#000000"
                    android:fontFamily="@font/readexpro"
                    android:gravity="center"
                    android:layout_height="30dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="5dp">

                <!-- 60% width section for the image -->
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="6">
                    <ImageView
                        android:id="@+id/imageViewPermitId"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/bg_with_radius_shadow"
                        android:padding="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"/>
                </RelativeLayout>


                <!-- 30% width section for the buttons -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginHorizontal="5dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/selectButtonPermitId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/readexmedium"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:text="Choose from Gallery"
                        android:background="@drawable/button_background"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginVertical="8dp">

                        <!-- Left line -->
                        <View
                            android:layout_width="50dp"
                            android:layout_height="1dp"
                            android:background="#000000"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="8dp" />

                        <!-- Text "Or" -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Or"
                            android:fontFamily="@font/readexpro"
                            android:gravity="center"
                            android:textColor="#000000"/>

                        <!-- Right line -->
                        <View
                            android:layout_width="50dp"
                            android:layout_height="1dp"
                            android:background="#000000"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/captureButtonPermitId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/readexmedium"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:text="Take a Picture"
                        android:background="@drawable/button_background"/>

                </LinearLayout>

            </LinearLayout>





            <TextView
                android:id="@+id/uploadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/readexmedium"
                android:padding="18dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:text="Upload Id"
                android:background="@drawable/button_background"/>

        </LinearLayout>
    </ScrollView>

</ScrollView>