<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Secretary.Secretary_Approval.Secretary_AccountApproval.SecretaryApproval">
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent" />
    <LinearLayout  android:layout_width="match_parent"
        android:background="@drawable/border2"
        android:orientation="vertical"
        android:id="@+id/homeLayout"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:fontFamily="@font/robot"
            android:text="ACCOUNT APPROVALS" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingVertical="2dp"
            android:paddingHorizontal="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/yellowbg">
            <ImageView
                android:layout_width="20dp"
                android:elevation="100dp"
                android:layout_gravity="center_vertical"
                android:layout_height="20dp"
                android:src="@drawable/inf"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:textSize="10dp"
                android:fontFamily="@font/readexpro"
                android:text="The secretary is the only one allowed to approve users for your app." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:fontFamily="@font/readexpro"
                    android:textColor="@color/black"
                    android:id="@+id/approved"
                    android:layout_marginHorizontal="10dp"
                    android:text="Approved"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/readexpro"
                        android:text="Pending"
                        android:textColor="@color/black"
                        android:id="@+id/pending"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:background="#00974D"
                        android:layout_height="1dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:fontFamily="@font/readexpro"
                    android:textColor="@color/black"
                    android:id="@+id/rejected"
                    android:layout_marginHorizontal="10dp"
                    android:text="Rejected"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="#b3b3b3"
                android:layout_height="1dp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:background="@drawable/secaccbg"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="5dp"
            android:textColor="@color/black"
            android:paddingTop="12dp"
            android:layout_height="match_parent"
            android:id="@+id/recyclerView"
            android:scrollbars="vertical"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="-3dp"
        android:id="@+id/menu"
        android:elevation="100dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:gravity="bottom"
        android:background="@drawable/bottom_nav_bg"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="40dp"
                android:id="@+id/accountIndicator"
                android:visibility="visible"
                android:layout_height="2dp"
                android:background="@color/green2"/>
            <ImageButton
                android:id="@+id/account"
                android:layout_width="50dp"
                android:padding="8dp"
                android:layout_height="50dp"
                android:src="@drawable/menu_account_selected"
                android:scaleType="fitXY"
                android:background="?attr/selectableItemBackground"
                android:tooltipText="Account"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Approval"
                android:fontFamily="@font/readexpro"
                android:textSize="14sp"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="40dp"
                android:id="@+id/loanIndicator"
                android:visibility="invisible"
                android:layout_height="2dp"
                android:background="@color/green2"/>
            <ImageButton
                android:id="@+id/loan"
                android:layout_width="50dp"
                android:padding="8dp"
                android:layout_height="50dp"
                android:src="@drawable/menu_loan_unselected"
                android:scaleType="fitXY"
                android:background="?attr/selectableItemBackground"
                android:tooltipText="Loan"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loan Approval"
                android:fontFamily="@font/readexpro"
                android:textSize="14sp"
                android:textColor="@color/black" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>