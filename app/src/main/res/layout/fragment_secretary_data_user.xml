<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Secretary.Secretary_DataAnalytics.SecretaryDataUser">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relative"
            android:layout_marginEnd="-20dp"
            android:layout_marginStart="-20dp"
            android:background="@drawable/stat_bg"
            android:layout_height="60dp">
            <TextView
                android:layout_width="180dp"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:text="STATISTICS"
                android:textSize="27dp"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:fontFamily="@font/robot"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/yellowbg"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:elevation="100dp"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:layout_height="20dp"
                android:src="@drawable/inf"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:textSize="10dp"
                android:padding="2dp"
                android:fontFamily="@font/readexpro"
                android:text="View key metrics on user activity and loan performance" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:padding="3dp"
            android:background="@drawable/rounded_border_green3"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Page 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="80dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/user"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="User"
                    android:textSize="14sp"
                    android:fontFamily="@font/readexpro"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_border_green4"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="80dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:id="@+id/loan"
                    android:text="Loan"
                    android:textSize="14sp"
                    android:fontFamily="@font/readexsemibold"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </LinearLayout>


        <com.example.metal.CustomCircularProgressBarAll
            android:id="@+id/loanCircularProgressBar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/circular_background"
            app:paidColor="#4CAF50"
            android:padding="20dp"
            app:unpaidColor="#CCCCCC"
            app:usersWithLoansColor="#FF9800"
            app:usersWithoutLoansColor="#2196F3"
            app:textSize="10sp"
            android:layout_gravity="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Page 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#C7FFBC"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:background="#00974D"
                    android:layout_height="1dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="60%"
                    android:id="@+id/paid"
                    android:textSize="24sp"
                    android:fontFamily="@font/readexbold"
                    android:textColor="@android:color/black" />
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="Complete loans"
                    android:textSize="14sp"
                    android:fontFamily="@font/readexpro"
                    android:textColor="@android:color/black" />
                <TextView
                    android:layout_width="match_parent"
                    android:background="#00974D"
                    android:layout_height="1dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="1dp"
                android:background="#00974D"
                android:layout_height="match_parent"/>
            <!-- Page 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#FFEBEB"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:background="#FA4040"
                    android:layout_height="1dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="60%"
                    android:id="@+id/unpaid"
                    android:textSize="24sp"
                    android:fontFamily="@font/readexsemibold"
                    android:textColor="#FA4040" />
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="Past due loans"
                    android:textSize="14sp"
                    android:fontFamily="@font/readexpro"
                    android:textColor="#FA4040" />
                <TextView
                    android:layout_width="match_parent"
                    android:background="#FA4040"
                    android:layout_height="1dp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Page 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_bg_grey"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/button_background"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:text="Users with loans"
                        android:textSize="14sp"
                        android:fontFamily="@font/readexpro"
                        android:textColor="@android:color/white" />
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/userpaid"
                        android:layout_height="50dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:text="%"
                        android:id="@+id/userWithLoan"
                        android:textSize="20sp"
                        android:fontFamily="@font/readexpro"
                        android:textColor="@android:color/white" />

                </LinearLayout>
            </LinearLayout>

            <!-- Page 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/button_background"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:text="Users without loans"
                        android:textSize="14sp"
                        android:fontFamily="@font/readexpro"
                        android:textColor="@android:color/white" />
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/userunpaid"
                        android:layout_height="50dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:text="%"
                        android:id="@+id/userWithOutLoan"
                        android:textSize="20sp"
                        android:fontFamily="@font/readexpro"
                        android:textColor="@android:color/white" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Page 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_bg_grey"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/button_background"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:text="Total loan paid"
                        android:textSize="14sp"
                        android:fontFamily="@font/readexpro"
                        android:textColor="@android:color/white" />
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/loanpaid"
                        android:layout_height="50dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:text="%"
                        android:textSize="20sp"
                        android:id="@+id/totalLoanpaid"
                        android:fontFamily="@font/readexpro"
                        android:textColor="@android:color/white" />

                </LinearLayout>
            </LinearLayout>

            <!-- Page 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/button_background"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:text="Total loan unpaid"
                        android:textSize="14sp"
                        android:fontFamily="@font/readexpro"
                        android:textColor="@android:color/white" />
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/loansunpaid"
                        android:layout_height="50dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:text="%"
                        android:id="@+id/totalLoanUnpaid"
                        android:textSize="20sp"
                        android:fontFamily="@font/readexpro"
                        android:textColor="@android:color/white" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    </ScrollView>

</FrameLayout>