<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Secretary.Secretary_PassDue.Secretary_PassDue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bglight"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/top"
            android:background="@drawable/loan_history_bg"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="0dp"
                android:layout_height="70dp">
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:src="@drawable/back_button_white"
                    android:scaleType="centerCrop"
                    android:padding="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="?attr/selectableItemBackground"
                    android:layout_marginStart="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/back"/>
                <TextView
                    android:layout_width="275dp"
                    android:layout_centerVertical="true"
                    android:text="OVER DUE LOANS"
                    android:textSize="27dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/robot"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="Manage your loans and stay updated on payments."
                android:textSize="13dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/loan_history_container"
                android:fontFamily="@font/readexpro"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:paddingHorizontal="15dp"
            android:layout_height="match_parent"
            android:id="@+id/recyclerView"
            android:scrollbars="vertical"/>
    </LinearLayout>
</RelativeLayout>