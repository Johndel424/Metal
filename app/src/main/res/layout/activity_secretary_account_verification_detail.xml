<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Secretary.Secretary_Approval.Secretary_AccountApproval.SecretaryAccountVerificationDetail">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/border2"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/back"
                    android:scaleType="centerCrop"
                    android:padding="10dp"
                    android:background="?attr/selectableItemBackground"
                    android:layout_margin="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/back"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:textColor="#004D25"
                    android:fontFamily="@font/robot"
                    android:text="BORROWER'S DETAIL" />
                <androidx.cardview.widget.CardView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:elevation="20dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/green2"
                    android:id="@+id/card"
                    app:cardCornerRadius="100dp" >
                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_height="120dp"
                        app:cardElevation="100dp"
                        app:cardCornerRadius="100dp" >
                        <ImageView
                            android:id="@+id/profile"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/logo"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:elevation="100dp"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginTop="-40dp"
                    android:background="@drawable/sec_account_detail_bg"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:padding="5dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/button_background"
                        android:textColor="@color/white"
                        android:fontFamily="@font/robot"
                        android:text="PERSONAL INFORMATION" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:padding="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Full Name:"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/readexpro"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Johndel"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:fontFamily="@font/readexpro"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/nameTextView"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:text="Age:"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/readexpro"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="21"
                            android:textSize="15dp"
                            android:fontFamily="@font/readexpro"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:id="@+id/ageTextView"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:text="Province:"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/readexpro"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="21"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/readexpro"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/provinceTextView"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:text="City/Municipality:"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/readexpro"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="21"
                            android:textSize="15dp"
                            android:fontFamily="@font/readexpro"
                            android:textColor="@color/black"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/cityTextView"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Baranggay:"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:fontFamily="@font/readexpro"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="21"
                            android:textSize="15dp"
                            android:fontFamily="@font/readexpro"
                            android:textColor="@color/black"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/baranggayTextView"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:text="Detailed Address:"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/readexpro"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="21"
                            android:textSize="15dp"
                            android:fontFamily="@font/readexpro"
                            android:textColor="@color/black"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/detailedAddressTextView"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Marital Status:"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/readexpro"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="21"
                            android:textSize="15dp"
                            android:fontFamily="@font/readexpro"
                            android:textColor="@color/black"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/maritalsStatusTextView"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Occupation:"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:fontFamily="@font/readexpro"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="21"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:fontFamily="@font/readexpro"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/occupationTextView"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:padding="5dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button_background"
                        android:textColor="@color/white"
                        android:fontFamily="@font/robot"
                        android:text="INCOME INFORMATION" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Monthly Income:"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/readexpro"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="21"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:fontFamily="@font/readexpro"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/monthlyIncomeTextView"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Meralco Bill Amount:"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:fontFamily="@font/readexpro"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="21"
                            android:textSize="15dp"
                            android:fontFamily="@font/readexpro"
                            android:textColor="@color/black"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/meralcoBilltView"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Water Bill Amount:"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:fontFamily="@font/readexpro"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="21"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/readexpro"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/waterBilltView"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Wifi/Internet Bill Amount:"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:fontFamily="@font/readexpro"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true"
                            android:text="21"
                            android:textSize="15dp"
                            android:fontFamily="@font/readexpro"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/wifiBilltView"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:text="House Rent Bill Amount:"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/readexpro"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:text="21"
                            android:textSize="15dp"
                            android:fontFamily="@font/readexpro"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/houseBilltView"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:text="International Money Transfer:"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/readexpro"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="21"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/readexpro"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/internationalTransfertView"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:padding="5dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button_background"
                        android:textColor="@color/white"
                        android:fontFamily="@font/robot"
                        android:text="UPLOADED REQUIREMENTS" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:background="@drawable/bg_with_radius_shadow"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:padding="10dp"
                                android:layout_weight="5"
                                android:src="@drawable/driverlicense"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_with_radius_shadow"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:padding="10dp"
                                android:layout_weight="5"
                                android:src="@drawable/driverlicense"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"/>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_with_radius_shadow"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:layout_weight="5"
                                android:padding="10dp"
                                android:src="@drawable/driverlicense"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:background="@drawable/bg_with_radius_shadow"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:layout_weight="5"
                                android:padding="10dp"
                                android:src="@drawable/driverlicense"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"/>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:background="@drawable/bg_with_radius_shadow"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:layout_weight="5"
                                android:src="@drawable/driverlicense"
                                android:padding="10dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"/>

                        </LinearLayout>

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginBottom="50dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/status"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:id="@+id/center"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:layout_marginHorizontal="20dp"
                            android:layout_alignParentStart="true"
                            android:padding="5dp"
                            android:id="@+id/btnAccept"
                            android:textAlignment="center"
                            android:background="@drawable/button_background"
                            android:fontFamily="@font/readexmedium"
                            android:onClick="onAcceptClicked"
                            android:text="Approved"
                            android:layout_toStartOf="@id/center"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:layout_marginHorizontal="20dp"
                            android:layout_alignParentEnd="true"
                            android:padding="5dp"
                            android:id="@+id/btnReject"
                            android:textAlignment="center"
                            android:background="@drawable/button_background_cancel"
                            android:fontFamily="@font/readexmedium"
                            android:text="Reject"
                            android:onClick="onRejectClicked"
                            android:layout_toEndOf="@id/center"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>